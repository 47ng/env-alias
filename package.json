{
  "name": "env-alias",
  "version": "1.0.0",
  "description": "Define aliases for environment variables and bind them at runtime",
  "main": "dist/index.js",
  "license": "MIT",
  "author": {
    "name": "Fran√ßois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/47ng/env-alias"
  },
  "keywords": [
    "twelve-factor",
    "env",
    "environment",
    "environment-variables",
    "alias"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "nodemon -e ts,.env -w .env -w . -x 'run-s test build'",
    "test": "jest --verbose",
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc",
    "build": "run-s build:clean build:ts",
    "size": "size-limit",
    "ci": "run-s test build size"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^2.2.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^13.1.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "1 KB"
    }
  ],
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "husky": {
    "pre-push": "run-s test build size"
  }
}
